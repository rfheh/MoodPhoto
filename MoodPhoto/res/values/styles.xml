<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. @style/Theme.AppCompat.Light.DarkActionBar-->
	    <item name="android:windowActionBarOverlay">true</item>
	    <item name="android:windowIsTranslucent">true</item>
        <!-- <item name="android:actionBarStyle">@style/TranslucentActionBar</item> -->
	    
	    <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/TranslucentActionBar</item>
    </style>
    
    <style name="TranslucentActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
    	<!-- <item name="android:titleTextStyle">@style/TitleTextStyle</item> -->
        <item name="android:background">@null</item>
        <item name="android:backgroundStacked">@null</item>
        <item name="android:backgroundSplit">@null</item>
		
        <!-- Support library compatibility -->
        <!-- <item name="titleTextStyle">@style/TitleTextStyle</item>
        <item name="background">@color/baichun</item>
        <item name="backgroundStacked">@color/baichun</item>
        <item name="backgroundSplit">@color/baichun</item> -->

	</style>

     <!-- action bar title text -->
    <style name="TitleTextStyle"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    
    <style name="FocusableStyle">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    
    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollbars">none</item>
        <item name="android:cacheColorHint">@android:color/white</item>
    </style>
    
    <style name="emptyTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:text">@string/empty</item>
        <item name="android:visibility">gone</item>
    </style>
    
    <!-- Layout width and height -->
    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="MatchWidthWrapHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="VerticalLayout" parent="MatchParent">
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="HorizontalLayout" parent="MatchWidthWrapHeight">
        <item name="android:orientation">horizontal</item>
    </style>
    
    <!-- TextView style -->
    <style name="TextViewNormal" parent="WrapContent">
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="TextViewLarge" parent="TextViewNormal">
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextViewSmall" parent="WrapContent">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="TextViewSingleHeight" parent="TextViewNormal">
        <item name="android:layout_height">@dimen/ui_element_size_medium</item>
    </style>
    
    <!-- EditText style -->
    <style name="EditTextNormal" parent="WrapContent">
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/ui_element_spacing_small</item>
        <item name="android:background">@drawable/edittext_selector</item>
    </style>
    
    <style name="EditTextSingleHeight" parent="EditTextNormal">
        <item name="android:layout_height">@dimen/ui_element_size_medium</item>
    </style>
    
    <!-- Button style -->
    <style name="Button" parent="WrapContent">
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/ui_element_spacing</item>
        <item name="android:paddingRight">@dimen/ui_element_spacing</item>
    </style>
</resources>
